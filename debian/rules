#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

export JAVA_HOME=/usr/lib/jvm/default-java
export MAVEN_OPTS=-Xmx14g -XX:MaxPermSize=1024M -XX:ReservedCodeCacheSize=1024m

%:
	dh $@

override_dh_auto_build:
	./dev/make-distribution.sh --name os1 --pip -DskipTests \
               -Phive -Pkubernetes -Phive-thriftserver -Dhadoop.version=3.2.2 -Phadoop-provided -Pmesos -Phadoop-cloud

